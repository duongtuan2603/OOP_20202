<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtFinalMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="8.4"
        android:textColor="#7C4DFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab_light"
        android:text="Học lực: Giỏi"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txtFinalMark"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="Hạnh Kiểm: Tốt"
        android:fontFamily="@font/roboto_slab_light"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txtFinalMark"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:maxLines="5"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_slab_light"
        android:text="Nhận xét: Em có cố gắng trong học tập, đi học đầy đủ và tập trung nghe giảng"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtFinalMark"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginEnd="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>